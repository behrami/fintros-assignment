<div class= 'container'>
  TOP STORIES

  <ol>
  <% @top_stories_array.each do |story_hash| %>
    <li>
      <span class = 'title'><%= link_to(story_hash[:title], story_hash[:url]) %></span><br>
      <span class = 'extraInfo'><%= story_hash[:score]%> points by <%= story_hash[:author]%> | <%= link_to("#{story_hash[:comments_num]} comments", "https://news.ycombinator.com/item?id=#{story_hash[:id]}")%> </span>
    </li>
  <% end %>
  </ol>
</div>
